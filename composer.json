{
    "name": "asorasoft/bill",
    "description": "The subscription plan billing",
    "keywords": [
        "asorasoft",
        "bill"
    ],
    "homepage": "https://github.com/helmab/bill",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mab Hel",
            "email": "mab@asorasoft.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Asorasoft\\Bill\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Asorasoft\\Bill\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Asorasoft\\Bill\\BillServiceProvider"
            ],
            "aliases": {
                "Bill": "Asorasoft\\Bill\\BillFacade"
            }
        }
    }
}
